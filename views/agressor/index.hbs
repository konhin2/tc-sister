<div class="title-page">
    <h1>Agressor's List</h1>
    <a href="/agressors/create">Add an Agressor</a>
</div>
<div class="all-cards">
    {{#each agressors}}
    <div class="each-card">
        <div class="card">
            <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
            <div class="card-body">
                <div>
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">
                        {{state}} - {{city}} <br>
                        Dislikes: {{rate}}
                    </p>
                </div>
                
                <a href="/agressor/{{_id}}" class="btn btn-primary"> View Details</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>There are no Agressors yet!</p>
    {{/each}}
</div>